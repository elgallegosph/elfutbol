import streamlit as st
import pandas as pd

st.title("游끥 Gesti칩n de Campeonato de F칰tbol")

# Sidebar para navegaci칩n
menu = ["Inicio", "Registrar Equipos", "Tabla de Posiciones", "Resultados"]
choice = st.sidebar.selectbox("Men칰", menu)

if choice == "Inicio":
    st.write("Bienvenido al gestor del torneo. Usa el men칰 lateral para empezar.")

elif choice == "Registrar Equipos":
    st.subheader("A침adir nuevo equipo")
    nombre_equipo = st.text_input("Nombre del equipo")
    if st.button("Guardar Equipo"):
        st.success(f"Equipo {nombre_equipo} registrado con 칠xito.")

elif choice == "Tabla de Posiciones":
    st.subheader("Clasificaci칩n Actual")
    # Ejemplo de datos
    datos = {
        "Equipo": ["Leones FC", "츼guilas Real", "Tiburones"],
        "PJ": [3, 3, 3],
        "PG": [2, 1, 0],
        "PE": [1, 1, 1],
        "PP": [0, 1, 2],
        "Pts": [7, 4, 1]
    }
    df = pd.DataFrame(datos)
    st.table(df.sort_values(by="Pts", ascending=False))
